<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title">NUEVA CATEGORIA</h3>
  </div>
  <div class="panel-body">
<%= simple_form_for(@category, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Nombre</label>
   	<div class="col-md-8">
    <%= f.input_field :nombre, class: 'form-control' %>
  </div>
  </div>
  
  
  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Descripcion</label>
   	<div class="col-md-8">
    <%= f.text_area :descripcion, class: 'form-control' %>
  </div>
  </div>
  
  <div class="form-group">
	<div class="col-sm-offset-4 col-sm-10">
    <%= button_tag(type: 'submit', class: "btn btn-success", :name => nil) do %>
      <span class="glyphicon glyphicon-floppy-disk"></span>  Guardar
    <% end %>
  </div>
  </div>
  
<% end %>
 </div>
</div>