<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title">NUEVA FACTURA</h3>
  </div>
  <div class="panel-body">
<%= simple_form_for(@factura, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <% if @factura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@factura.errors.count, "error") %> prohibited this factura from being saved:</h2>

      <ul>
      <% @factura.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
  <label for="name" class="col-sm-4 control-label-left">Fecha</label>
  <div class="col-md-8">
      <%= f.text_field :fecha, 'data-provide' => "datepicker", class: "form-control", size: "20", width: "20", heigth: "62" %>
  </div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label-left">Numero pago</label>
   	<div class="col-md-8">
      	<%= f.input_field :num_pago, class: 'form-control' %>
   	</div>
  </div>

  <div class="form-group">
  <label for="name" class="col-sm-4 control-label-left">Cliente</label>
  <div class="col-md-8">
    <%= f.collection_select :cliente_id, Cliente.all, :id, :apellido, {}, class: "form-control", prompt: "Seleccione Municipio" %>
  </div>
  </div> 

  
  <div class="form-group">
  <label for="name" class="col-sm-4 control-label-left">Modo pago</label>
  <div class="col-md-8">
    <%= f.collection_select :modo_pago_id, ModoPago.all, :id, :nombre, {}, class: "form-control", prompt: "Seleccione Municipio" %>
  </div>
  </div>
  
  <div class="form-group">
  <label for="name" class="col-sm-4 control-label-left">Seleccione producto: </label>
  <div class="col-md-8">
    <%= f.collection_select :detalle_id, Detalle.all, :id, :nombre_pro, {}, class: "form-control" %>
  </div>
  </div>
  
   <div class="form-group">
	<div class="col-sm-offset-4 col-sm-10">
    <%= button_tag(type: 'submit', class: "btn btn-success", :name => nil) do %>
      <span class="glyphicon glyphicon-floppy-disk"></span>  Guardar
    <% end %>
  </div>
  </div>
<% end %>
</div>
</div>