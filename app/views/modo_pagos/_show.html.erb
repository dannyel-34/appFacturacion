<div class="modo_pago">
<div class="panel panel-default">
<div class="panel-heading">
<h3 class="panel-title">Modo Pago: <%= @modo_pago.id %></h3>
</div>
<div class="panel-body">
<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @modo_pago.nombre %>
</p>

<p>
  <strong>Otros detalle:</strong>
  <%= @modo_pago.otros_detalle %>
</p>

<center>
<%= link_to edit_modo_pago_path(@modo_pago), class: "btn btn-warning" do %>
<span class="glyphicon glyphicon-edit"></span>
<% end %> |
<%= link_to modo_pagos_path, class: "btn btn-success" do %>
<span class="glyphicon glyphicon-share-alt"></span>
<% end %>
</center>
</div>
</div>
</div>