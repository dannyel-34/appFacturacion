<div class="panel panel-default">
  <div class="panel-heading">
    <center><h3 class="panel-title">NUEVO MUNICIPIO</h3></center>
  </div>
  <div class="panel-body">
<%= simple_form_for(@municipio, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <% if @municipio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@municipio.errors.count, "error") %> prohibited this municipio from being saved:</h2>

      <ul>
      <% @municipio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label-left">Nombre departamento</label>
   	<div class="col-md-8">
      	<%= f.input_field :nombre_departamento, class: 'form-control', placeholder: "nombre departamento" %>
   	</div>
  </div>
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label-left">Nombre municipio</label>
   	<div class="col-md-8">
      	<%= f.input_field :nombre_municipio, class: 'form-control', placeholder: "nombre municipio" %>
   	</div>
  </div>
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label-left">Nombre centro poblado</label>
   	<div class="col-md-8">
      	<%= f.input_field :nombre_centro_poblado, class: 'form-control', placeholder: "nombre centro poblado" %>
   	</div>
  </div>
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label-left">Nombre</label>
   	<div class="col-md-8">
      	<%= f.input_field :nombre, class: 'form-control', placeholder: "nombre" %>
   	</div>
  </div>

  <div class="form-group">
	<div class="col-sm-offset-4 col-sm-10">
    <%= button_tag(type: 'submit', class: "btn btn-success", :name => nil) do %>
      <span class="glyphicon glyphicon-floppy-disk"></span>  Guardar
    <% end %>
  </div>
  </div>
<% end %>
